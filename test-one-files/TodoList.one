@useState($todos, [])
@useState($newTodo, '')

<blade>
<div class="todo-list">
    <h2>Todo List</h2>
    <input 
        type="text" 
        @bind($newTodo)
        placeholder="Add new todo..."
    />
    <button @click(addTodo())>Add</button>
    
    <ul>
        @foreach($todos as $index => $todo)
        <li>
            {{ $todo }}
            <button @click(removeTodo($index))>Remove</button>
        </li>
        @endforeach
    </ul>
</div>
</blade>

<script setup>
export default {
    addTodo() {
        if (this.newTodo.trim()) {
            this.setTodos([...this.todos, this.newTodo]);
            this.setNewTodo('');
        }
    },
    
    removeTodo(index) {
        const updated = this.todos.filter((_, i) => i !== index);
        this.setTodos(updated);
    }
}
</script>

<style scoped>
.todo-list {
    max-width: 500px;
    margin: 0 auto;
}

input {
    width: 70%;
    padding: 8px;
}

ul {
    list-style: none;
    padding: 0;
}

li {
    padding: 10px;
    border-bottom: 1px solid #eee;
}
</style>
